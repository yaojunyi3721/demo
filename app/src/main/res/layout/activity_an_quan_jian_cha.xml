<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.chinaitop.linxia.demo.activity.yidongjieru.AnQuanJianChaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="环境检查:" />

            <TextView
                android:id="@+id/tv_kudian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_huangjingjiancha"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/border2"
                android:text="选择" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="文件配置:" />

            <TextView
                android:id="@+id/tv_pinzhong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_wenjianpeizhi"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/border2"
                android:text="选择" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="准入检查:" />

            <TextView
                android:id="@+id/tv_xingzhi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_zhunrujiancha"

                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/border2"
                android:text="选择" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="版本检查:" />

            <TextView
                android:id="@+id/tv_dengji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_banben"

                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height_35"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/border2"
                android:text="选择" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/title_an_quan_jian_cha"></include>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
